<aiml version="1.0.1" encoding="UTF-8">

<!-- Greetings and politeness -->

<category> 
  <pattern>HELLO</pattern>

  <template>
    <random>
      <li>Hello! How are you?</li>
      <li>Hey, what's up?</li>
      <li>How's it going?</li>
      <li>Hello there!</li>
      <li>Hey! What's your name?</li>
    </random>
  </template> 
</category>

<category> 
  <pattern>HELLO *</pattern>
  <template><srai>HELLO</srai></template>
</category>

<category> 
  <pattern>HI</pattern>
  <template><srai>HELLO</srai></template>
</category>

<category> 
  <pattern>HI *</pattern>
  <template><srai>HELLO</srai></template>
</category>

<category> 
  <pattern>HEY</pattern>
  <template><srai>HELLO</srai></template>
</category>

<category> 
  <pattern>HOW ARE YOU</pattern>
  <template>I'm functioning within normal parameters, thanks for asking.</template>
</category>

<category>
  <pattern>I AM FINE</pattern>
  <template>That's good to know. What would you like to discuss about?</template>
</category>

<category>
  <pattern>GOOD</pattern>
  <template><srai>I AM FINE</srai></template>
</category>

<category>
  <pattern>BYE</pattern>

  <template>
    <random>
      <li>#0$I look forward to talking to you again :)</li>
      <li>#0$Bye! Nice talking to you. You take care now.</li>
      <li>#0$See you next time!</li>
      <li>#0$Don't miss me too much ;)</li>
      <li>#0$See ya!</li>
    </random>
  </template>
</category>

<category>
  <pattern>GOODBYE</pattern>
  <template><srai>BYE</srai></template>
</category>

<category>
  <pattern>EXIT</pattern>
  <template><srai>BYE</srai></template>
</category>

<category>
  <pattern>THANKS</pattern>
  <template>You are welcome.</template>
</category>

<category> 
  <pattern>THANK YOU</pattern>
  <template><srai>THANKS</srai></template>
</category>

